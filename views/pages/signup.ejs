<!DOCTYPE html>
<html lang="ko">
  <head>
    <%- include('../partials/head.ejs'); %>
  </head>
  <body>
    <noscript>You need to enable JavaScript to run this app.</noscript>
    <header>
      <%- include('../partials/header.ejs'); %>
    </header>
    <nav>
      <%- include('../partials/nav.ejs'); %>
    </nav>
    <main>
      <h1>Sign Up</h1>
      <form action="signup" method="POST">
        <input type="text" name="id" placeholder="ID" required style="ime-mode:disabled;"/>
        <input type="text" name="username" placeholder="USERNAME" required />
        <input type="password" name="password" placeholder="PASSWORD" required style="ime-mode:disabled;"/>
        <button type="submit">Sign Up</button>
      </form>
      <button type="button" onclick="location.href='../'">Home</button>
    </main>
    <footer>
      <%- include('../partials/footer.ejs'); %>
    </footer>
    <script type="text/javascript" src="/javascripts/index.js"></script>
  </body>
</html>